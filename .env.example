# 应用配置
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=淘宝智能搜索助手
VERSION=1.0.0

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./taobao_agent.db
# 对于PostgreSQL: postgresql://user:password@localhost/dbname
# 对于MySQL: mysql://user:password@localhost/dbname
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# AI模型配置
MODEL_PROVIDER=qwen  # 可选: openai, qwen

# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Qwen/DashScope Configuration
DASHSCOPE_API_KEY=your_dashscope_api_key_here
QWEN_MODEL=qwen-turbo
QWEN_MAX_TOKENS=1000
QWEN_TEMPERATURE=0.7

# Taobao API Keys
TAOBAO_APP_KEY=TAOBAO_APP_KEY
TAOBAO_APP_SECRET=TAOBAO_APP_SECRET
TAOBAO_ADZONE_ID=TAOBAO_ADZONE_ID
TAOBAO_API_TIMEOUT=30

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# CORS配置
BACKEND_CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# 安全配置
ALLOWED_HOSTS=*
RATE_LIMIT_PER_MINUTE=60

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# 监控配置（可选）
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=false

# 第三方服务配置
WEBHOOK_SECRET=your-webhook-secret
API_KEY_HEADER=X-API-Key